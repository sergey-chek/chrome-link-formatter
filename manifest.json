{
  "name": "Link Formatter (Jira / Slack)",
  "version": "1.0",
  "description": "An extension for copying links in Jira and Slack formats",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
